<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <class>com.example.registry.entity.Cancellation</class>
    <class>com.example.registry.entity.Employee</class>
    <class>com.example.registry.entity.Estate</class>
    <class>com.example.registry.entity.Moving</class>
    <class>com.example.registry.entity.Purchase</class>
    <class>com.example.registry.entity.Repair</class>
    <class>com.example.registry.entity.Resolution</class>
    <class>com.example.registry.entity.Role</class>
    <class>com.example.registry.entity.Room</class>
    <class>com.example.registry.entity.Status</class>
    <class>com.example.registry.entity.Stocktaking</class>
    <class>com.example.registry.entity.StocktakingResult</class>
    <class>com.example.registry.entity.Structure</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/registry"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
