<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="512.0" prefWidth="776.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sales_department.OrderManagment">
   <children>
      <Label fx:id="orderLabel" layoutX="261.0" layoutY="20.0" text="Заказы и их реестр">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Button fx:id="addOrderButton" layoutX="264.0" layoutY="102.0" mnemonicParsing="false" onAction="#onAddOrderButtonClick" prefHeight="64.0" prefWidth="248.0" text="Создать новый заказ">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="findOrderButton" layoutX="261.0" layoutY="203.0" mnemonicParsing="false" onAction="#onFindOrderButtonClick" prefHeight="64.0" prefWidth="254.0" text="Найти существующий заказ">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="viewOrderButton" layoutX="261.0" layoutY="298.0" mnemonicParsing="false" onAction="#onViewOrderButtonClick" prefHeight="64.0" prefWidth="254.0" text="Реестр заказов">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="261.0" layoutY="408.0" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="64.0" prefWidth="254.0" text="Выход">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
